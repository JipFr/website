<div class="content postWrapper">

	<link rel="stylesheet" href="/post.css">

	{{{getHighlightJs post.body.md}}}

	<div class="postMain">
		
		{{#if post.image}}
		<div class="postImage">
			<img src="{{#if post.banner}}{{ post.banner }}{{else}}{{ post.image }}{{/if}}" alt="Big hero image">
		</div>
		{{/if}}

		<div class="postContent subContent">
			{{{toHTML post.body.md}}}
		</div>
	</div>

	<div class="section postsSection">
		<h2 class="title spread">
			<span class="mainTitle">{{ locale.posts.recentOther }}</span>
			<a class="moreLink" href="/posts">{{ locale.posts.showAll }}</a>
		</h2>
		<div class="posts">
			{{#each posts}}
			{{> post}}
			{{/each}}
		</div>
	</div>

</div>